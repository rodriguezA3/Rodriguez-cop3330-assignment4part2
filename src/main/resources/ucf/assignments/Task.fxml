<?xml version="1.0" encoding="UTF-8"?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            fx:controller="ucf.assignments.TaskController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #808080;">
            <children>
                <AnchorPane prefHeight="70.0" prefWidth="600.0" style="-fx-background-color: #FFA500;">
                    <children>
                        <Label layoutX="64.0" layoutY="13.0" text="YOUR TASK ITEM:" textAlignment="CENTER"
                               textFill="#fdfdfd">
                            <font>
                                <Font name="Impact" size="35.0"/>
                            </font>
                        </Label>
                        <ImageView fitHeight="56.0" fitWidth="50.0" layoutX="14.0" layoutY="10.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@baseline_list_alt_white_24dp.png"/>
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
                <TextField fx:id="taskNameTextField" layoutX="143.0" layoutY="83.0" prefHeight="25.0" prefWidth="243.0"
                           promptText="Ex. Project"/>
                <Label layoutX="14.0" layoutY="84.0" text="Enter task name:" textAlignment="CENTER" textFill="#fdfdfd">
                    <font>
                        <Font name="Impact" size="18.0"/>
                    </font>
                </Label>
                <Label layoutX="14.0" layoutY="128.0" text="Enter due date:" textAlignment="CENTER" textFill="#fdfdfd">
                    <font>
                        <Font name="Impact" size="18.0"/>
                    </font>
                </Label>
                <Label layoutX="14.0" layoutY="171.0" text="Enter task description:" textAlignment="CENTER"
                       textFill="#fdfdfd">
                    <font>
                        <Font name="Impact" size="18.0"/>
                    </font>
                </Label>
                <TextArea fx:id="taskDescriptionTextField" layoutX="192.0" layoutY="171.0" prefHeight="106.0"
                          prefWidth="386.0" promptText="Ex. Project has two parts."/>
                <Label layoutX="259.0" layoutY="345.0" text="Add task." textAlignment="CENTER" textFill="#fdfdfd">
                    <font>
                        <Font name="Impact" size="18.0"/>
                    </font>
                </Label>
                <Button layoutX="263.0" layoutY="295.0" mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@baseline_add_circle_white_24dp.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <DatePicker fx:id="datePicker" layoutX="136.0" layoutY="127.0"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>